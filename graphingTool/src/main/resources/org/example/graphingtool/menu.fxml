<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="280.0" spacing="12.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.graphingtool.MenuController">
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>

    <Label fx:id="menuText" alignment="CENTER" prefHeight="42.0" prefWidth="100.0" style="-fx-font-weight: bold;" text="Menu" textAlignment="CENTER">
      <font>
         <Font name="Segoe UI" size="20.0" />
      </font></Label>
   <Separator prefHeight="0.0" prefWidth="240.0" />
    <Button fx:id="searchButton" alignment="CENTER" onAction="#onMenuButtonClick" prefWidth="200.0" text="Project Search" />
    <Button fx:id="statusButton" onAction="#onMenuButtonClick" prefWidth="200.0" text="Project Status" />
    <Button fx:id="hoursButton" onAction="#onMenuButtonClick" prefWidth="200.0" text="Project Resources" />
    <Button fx:id="bugsButton" onAction="#onMenuButtonClick" prefWidth="200.0" text="Project Bugs" />
    <Button fx:id="exitButton" alignment="CENTER" onAction="#onMenuButtonClick" style="-fx-background-color: #a9a9a9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Exit Application" />

</VBox>
