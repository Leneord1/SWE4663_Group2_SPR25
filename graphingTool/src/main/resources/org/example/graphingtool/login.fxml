<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.14-internal" fx:controller="org.example.graphingtool.loginController">
   <children>
      <VBox alignment="CENTER" prefHeight="280.0" prefWidth="400.0" spacing="10.0">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>

         <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Login" />

         <TextField fx:id="usernameField" promptText="Username" />
         <PasswordField fx:id="passwordField" promptText="Password" />

         <Button onAction="#handleLogin" text="Login" />
         <Label fx:id="errorLabel" textFill="red" />
      </VBox>
   </children>
</AnchorPane>
