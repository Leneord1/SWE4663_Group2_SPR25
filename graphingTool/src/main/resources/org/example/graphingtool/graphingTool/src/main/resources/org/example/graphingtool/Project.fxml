<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.graphingtool.ProjectController" spacing="10" alignment="CENTER">
    <Label text="Project Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="searchField" promptText="Search by ID, Manager, or Assignment"/>
    <Button fx:id="searchButton" text="Search" onAction="#onProjectSelected"/>
    <Button fx:id="backButton" text="Back to Menu" onAction="#goToMainMenu"/>


    <ListView fx:id="projectList"/>

    <Label fx:id="projectStatus" text="Project Status" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
</VBox>
