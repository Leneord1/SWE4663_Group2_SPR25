<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.graphingtool.loginController">
   <children>
      <VBox spacing="10.0" alignment="CENTER" layoutX="100" layoutY="80" prefWidth="300" prefHeight="200">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>

         <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

         <TextField fx:id="usernameField" promptText="Username" />
         <PasswordField fx:id="passwordField" promptText="Password" />

         <Button text="Login" onAction="#handleLogin" />
         <Label fx:id="errorLabel" textFill="red" />
      </VBox>
   </children>
</AnchorPane>
