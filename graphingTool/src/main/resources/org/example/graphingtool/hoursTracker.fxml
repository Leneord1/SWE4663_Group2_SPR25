<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.graphingtool.HoursTrackerController" spacing="10" alignment="CENTER">
    <Label text="Hours Tracker" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Button fx:id="backButton" text="Back to Menu" onAction="#goToMainMenu"/>

    <DatePicker fx:id="workDatePicker"/>
    <TextField fx:id="hoursField" promptText="Enter hours worked"/>
    <TextField fx:id="projectField" promptText="Enter Project ID"/>
    <Button fx:id="submitButton" text="Submit" onAction="#submitHours"/>

    <Label text="Logged Hours"/>
    <ListView fx:id="hoursList"/>


</VBox>
